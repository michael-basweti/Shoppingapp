<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_supermarkets_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.geekalex.shoppingapp.SupermarketsRegister">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_outline"
        android:padding="8dp"
        android:id="@+id/emailField"
        android:layout_below="@+id/nameField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Email..."
        android:textColorLink="?android:attr/colorPrimary"
        android:imeOptions="actionDone"
        />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="117dp"
        android:layout_marginStart="117dp"
        android:id="@+id/registerBtn"
        android:background="?attr/colorPrimary"
        android:textColorLink="?android:attr/colorPrimary"
        android:textColor="@color/cardview_light_background"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:ems="10"
        android:id="@+id/nameField"
        android:background="@drawable/input_outline"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorLink="?android:attr/colorPrimary"
        android:hint="Supermarket Name"
        android:imeOptions="actionDone"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="8dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:layout_marginTop="34dp"
        android:id="@+id/passwordField"
        android:layout_below="@+id/emailField"
        android:layout_alignParentLeft="true"
        android:textColorLink="?android:attr/colorPrimary"
        android:layout_alignParentStart="true"
        android:hint="Password..."
        android:imeOptions="actionDone"

        />

    <Button
        android:text="Have An Account Already? Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        tools:background="@color/cardview_light_background"
        android:background="@color/cardview_light_background"
        android:textSize="25sp"
        android:textAllCaps="false"
        tools:ignore="Deprecated,HardcodedText,TextViewEdits"
        android:minHeight="20dp"
        android:capitalize="none"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/registerBtn" />

</RelativeLayout>
